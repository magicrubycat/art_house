<div class="container">
   <h1>Here's a list of all our artifacts:</h1>
<div class="row">
   <div class="col-6">
  </div>
  <div class="col-9">
    <form class="form-inline" action="artifacts">
  <input class="form-control form-control-sm mr-1 w-75" type="text" name="query" placeholder="Search"
    aria-label="Search">
  <i class="fas fa-search" aria-hidden="true"></i>
</form>
  </div>
</div>

  <div class="card-grid-artifact">
    <% @artifacts.each do |artifact| %>
      <div class="card-artifact">
        <h1><%= link_to artifact.name.capitalize, artifact_path(artifact)  %></h1>
        <p>Artist: <%= artifact.artist  %></p>
        <p>Year: <%= artifact.year  %></p>
        <p>Starting value: <%= artifact.starting_value  %>â‚¬</p>
      </div>
    <% end %>
   </div>
  </div>
</div>

<div class="container">
  <div class="create-artifact">
    <h4>Add your own artifact:</h4>
  </div>
  <%= simple_form_for(@artifact) do |f| %>
      <%= f.input :name %>
      <%= f.input :artist %>
      <%= f.input :year %>
      <%= f.input :description %>
      <%= f.input :starting_value %>
       <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: "btn btn-ghost btn-sm" %>
    <% end %>

    <%= link_to "Go back", artifacts_path, class: "btn btn-ghost", style: "margin-top: 15px;" %>
</div>
